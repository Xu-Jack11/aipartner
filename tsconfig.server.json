{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/server",
    "declaration": false,
    "noEmit": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "types": ["node"],
    "incremental": false
  },
  "include": ["apps/server/src/**/*.ts", "prisma/**/*.ts"],
  "exclude": ["node_modules"]
}
